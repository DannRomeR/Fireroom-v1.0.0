<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="RegisterBinding"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authenticate.RegisterActivity_data"
    android:background="@drawable/rectangle"
    android:padding="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Form"
                android:textSize="18sp"
                android:textAlignment="center"
                />
            <EditText
                android:id="@+id/name_register_textView"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Name"
                android:inputType="textWebEditText"
                android:importantForAutofill="no"
                android:maxWidth="480dp"
                app:layout_constraintWidth_max="480dp"
                tools:ignore="InvalidId" />
            <EditText
                android:id="@+id/email_register_textView"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/email"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:maxWidth="480dp"
                app:layout_constraintWidth_max="480dp" />
            <EditText
                android:id="@+id/password_register_textView"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:importantForAutofill="no"
                android:maxWidth="480dp"
                app:layout_constraintWidth_max="480dp"/>
            <EditText
                android:id="@+id/phone_register_textView"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Phone Number"
                android:inputType="text|phone"
                android:importantForAutofill="no"
                android:maxWidth="480dp"
                app:layout_constraintWidth_max="480dp" />
            <EditText
                android:id="@+id/age_register_textView"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Age"
                android:inputType="text|number"
                android:importantForAutofill="no"
                android:maxWidth="480dp"
                app:layout_constraintWidth_max="480dp" />
            <EditText
                android:id="@+id/country_register_textView"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="Country"
                android:inputType="textWebEditText"
                android:importantForAutofill="no"
                android:maxWidth="480dp"
                app:layout_constraintWidth_max="480dp" />
            <Button
                android:id="@+id/submit_register_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Submit"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
</layout>